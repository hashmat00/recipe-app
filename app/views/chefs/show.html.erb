<!--display chef gravatar-->
</br>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @chef, size: 200 %>
        <hr>
    </div>
</div>

<!--display title from partials page-->
<h2 class="chef-text-showpage"><%= @chef.chefname %></h2> 
<hr>




<!--display chefs recipe listings-->
    <% @recipes.each do |x| %>
        <div class="row">
             <div class="col-lg-4 well col-md-offset-3">
                <h4><%= link_to x.name, recipe_path(x) %></h4>
                <p><%= x.summary %></p>
                <p>
                    <span class="quiet"><small>Created: <%= time_ago_in_words(x.created_at) %> ago - </small></span>
                
                    <span class="quiet"><small>Updated: <%= time_ago_in_words(x.updated_at) %> ago</small></span>
                </p>
                <div class="pull-right">
                    <%= link_to like_recipe_path(x, like: true), method: :post do %>
                    <i class="glyphicon glyphicon-thumbs-up">&nbsp<%= x.thumbs_up_total %></i>
                    <% end %> &nbsp&nbsp&nbsp&nbsp
                    <%= link_to like_recipe_path(x, like: false), method: :post do %>
                    <i class="glyphicon glyphicon-thumbs-down">&nbsp<%= x.thumbs_down_total %></i>
                    <% end %>
                    
                </div>
             </div>
            <div class="col-md-4">
    		<%= image_tag(x.picture.url, class: "img-responsive") if x.picture? %>
    	    </div>
        </div>
        <hr/>
    <% end %>
    
    
    <!--display pagination on bottom page-->
 <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
     <%= will_paginate @recipes %>
    </div>
</div>  




