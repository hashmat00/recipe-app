<!--display title from partials page-->
<%= render 'shared/page_title', title: "View All Recipes" %>

<hr/>

<% @recipes.each do |x| %>

    <div class="row">
        <div class="col-md-2">
            <section class="chef_info center">
             <%= link_to gravatar_for(x.chef, size: 100) %>
             <h5>Chef Name: <%= x.chef.chefname %></h5>
            </section>
        </div>
        
        <div class="col-lg-6 well">
            <h4><%= link_to x.name, recipe_path(x) %></h4>
            <p><%= x.summary %></p>
            <p>
                <span class="quiet"><small><%= time_ago_in_words(x.created_at) %> ago</small></span>
            </p>
        </div>
        <div class="col-md-4">
		<%= image_tag(x.picture.url, size: "250x150", class: "gravatar") if x.picture? %>
	    </div>
        
    </div>
    <hr/>

<% end %>