<h1><%= @recipe.name %></h1>

<div class="container">
    <div class="row">
        <div class="col-md-4 center">
            <section class="chef_info center">
            <%= gravatar_for @recipe.chef, size: 200 %>
            <h5>Chef Name: <%= @recipe.chef.chefname %></h5>
            </section>
        </div>
        
        <div class="col-lg-8">
            <%= link_to 'Edit Recipe', edit_recipe_path(@recipe), class: "btn btn-success pull-right" %>
            <h3><%= @recipe.summary %></h3>
            <div class="well">
          <p>
                    <strong>Steps:</strong>
                    </p>
                    <%= simple_format(@recipe.description) %>
        </div>
        </div>
        
        
        
        <div class="col-md-2 pull-right">
<h5><%= link_to 'Return to listing', recipes_path, class: "btn btn-warning btn-small" %></h5>
</div>

        
 </div>
 </div> 



